@model MyVehiclesViewModel
@{
    ViewBag.Title = "My Motorcycles";
}
<h2 class="text-center text-primary">@ViewBag.Title</h2>
<hr />
<h4 class="text-primary">My Added Motorcycles</h4>
@if (!Model.AddedVehicles.Any())
{
    <h2 class="text-center">You have no added motorcycle yet!</h2>
}
<div class="row">
    @foreach (var m in Model.AddedVehicles)
    {
        @await Html.PartialAsync("~/Views/Shared/_MotorcyclePartial.cshtml", m)
    }
</div>
<h4 class="text-primary">My Rented Motorcycles</h4>
@if (!Model.RentedVehicles.Any())
{
    <h2 class="text-center">You have no rented motorcycles yet!</h2>
}
<div class="row">
    @foreach (var m in Model.RentedVehicles)
    {
        @await Html.PartialAsync("~/Views/Shared/_MotorcyclePartial.cshtml", m)
    }
</div>