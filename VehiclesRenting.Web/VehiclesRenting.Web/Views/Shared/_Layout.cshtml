@using static VehiclesRenting.Common.Constants.GeneralApplicationConstants;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vehicles Renting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VehiclesRenting.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <partial name="_NotificationsPartial" />
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-primary bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-primary" asp-area="" asp-controller="Home" asp-action="Index">Vehicles Renting</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="carsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">VehichleConstantss</a>
                            <ul class="dropdown-menu" aria-labelledby="carsDropdown">
                                @if (this.User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Car" asp-action="Add">Add VehichleConstants</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Car" asp-action="Mine">My VehichleConstantss</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" text-primary asp-area="" asp-controller="Car" asp-action="All">All VehichleConstantss</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="motorcyclesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Motorcycles</a>
                            <ul class="dropdown-menu" aria-labelledby="motorcyclesDropdown">
                                @if (this.User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Motorcycle" asp-action="Add">Add Motorcycle</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Motorcycle" asp-action="Mine">My Motorcycles</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Motorcycle" asp-action="All">All Motorcycles</a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="scootersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Scooters</a>
                            <ul class="dropdown-menu" aria-labelledby="scootersDropdown">
                                @if (this.User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Scooter" asp-action="Add">Add Scooter</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Scooter" asp-action="Mine"> My Scooters</a>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item text-primary  asp-area=" asp-controller="Scooter" asp-action="All">All Scooters </a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="jetsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Jets</a>
                            <ul class="dropdown-menu" aria-labelledby="jetsDropdown">
                                @if (this.User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Jet" asp-action="Add">Add Jet</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Jet" asp-action="Mine"> My Jets</a>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item text-primary  asp-area=" asp-controller="Jet" asp-action="All">All Jets </a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-primary" href="#" id="yachtsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Yachts</a>
                            <ul class="dropdown-menu" aria-labelledby="yachtsDropdown">
                                @if (this.User.Identity?.IsAuthenticated ?? false)
                                {
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Yacht" asp-action="Add">Add Yacht</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-primary" asp-area="" asp-controller="Yacht" asp-action="Mine"> My Yachts</a>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item text-primary  asp-area=" asp-controller="Yacht" asp-action="All">All Yachts </a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Vehicles Renting @ReleaseYear
            @if (DateTime.UtcNow.Year != ReleaseYear)
            {
                @Html.Raw($" - {DateTime.UtcNow.Year}")
            }
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
