@model IEnumerable<IndexViewModel>
@{
    ViewData["Title"] = "Home Page";
    var cars = Model.ToList();
    var motorcycles = Model.ToList();
    var scooters = Model.ToList();
}
@if (!cars.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for renting vehicles!</h1>
        <p class="lead">
            There are no vehicles in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Car" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Cars</a>
                <a asp-controller="Motorcycle" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Motorcycle</a>
                <a asp-controller="Scooter" asp-action="Add" class="btn btn-primary btn-lg"
                   role="button">Add Scooter</a>
            }
        </p>
    </div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < cars.Count(); i++)
        {
            var car = cars[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@car.ImageUrl" alt="@car.Brand">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Car" aspaction="Details"
                           asp-route-id="@car.Id"> @car.Brand</a>
                    </h5>
                </div>
            </div>
        }
        @for (int i = 0; i < motorcycles.Count(); i++)
        {
            var motorcycle = motorcycles[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@motorcycle.ImageUrl" alt="@motorcycle.Brand">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Motorcycle" aspaction="Details"
                           asp-route-id="@motorcycle.Id"> @motorcycle.Brand</a>
                    </h5>
                </div>
            </div>
        }
        @for (int i = 0; i < scooters.Count(); i++)
        {
            var scooter = scooters[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@scooter.ImageUrl" alt="@scooter.Brand">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Motorcycle" aspaction="Details"
                           asp-route-id="@scooter.Id"> @scooter.Brand</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>